<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_root"
              android:layout_width="match_parent"
              android:layout_height="52dp"
              android:baselineAligned="true"
              android:orientation="horizontal">

    <LinearLayout
            android:id="@+id/host_ll_ticket"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/host_iv_ticket"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:id="@+id/host_tv_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="购票"
                android:textColor="#262933"
                android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/host_ll_goods"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/host_iv_goods"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:id="@+id/host_tv_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="卖品"
                android:textColor="#262933"
                android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/host_ll_mine"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/host_iv_mine"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:id="@+id/host_tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:text="我的"
                android:textColor="#262933"
                android:textSize="10sp" />
    </LinearLayout>


</LinearLayout>