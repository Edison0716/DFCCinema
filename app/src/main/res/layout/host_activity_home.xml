<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_transparent100_white"
        tools:context=".ui.HostHomeActivity">

    <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="52.5dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <View
            app:layout_constraintTop_toBottomOf="@id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F5F5F5"/>

    <include layout="@layout/host_layout_bottom_bar"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>