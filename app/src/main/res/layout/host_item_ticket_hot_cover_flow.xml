<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="248dp"
        android:layout_height="337dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="8dp">

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"
               android:id="@+id/host_iv_movie_img"
               android:background="@mipmap/host_test"/>


    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="bottom"
                  android:background="@drawable/host_shadow_gray_to_black">

        <TextView
                android:id="@+id/host_tv_movie_name"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="毒液：致命守护者"
                android:textColor="@color/common_transparent100_white" android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"/>


        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:layout_marginBottom="10dp"
                      android:layout_marginStart="13dp">
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/host_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:rating="3.5"
                    app:mrb_progressBackgroundTint="#D8D8D8"
                    app:mrb_progressTint="#FA9947"
                    style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="11sp"
                      android:text="8.5"
                      android:layout_gravity="center_vertical"
                      android:textColor="#FA9947" android:layout_marginStart="5dp"
                      tools:ignore="SmallSp"/>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>