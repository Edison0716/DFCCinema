<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="191dp"
        android:layout_height="280dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="8dp">

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"
               android:id="@+id/host_iv_movie_img"
               android:background="@mipmap/host_test"/>

    <View android:layout_width="match_parent" android:layout_height="match_parent"
          android:background="@color/common_transparent40"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_gravity="bottom" android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="毒液：致命守护者"
                  android:textColor="@color/common_transparent100_white" android:textSize="14sp"
                  android:textStyle="bold"
                  android:layout_marginStart="13dp"/>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="13dp"
                android:rating="3.5"
                app:mrb_progressBackgroundTint="#D8D8D8"
                app:mrb_progressTint="#FA9947"
                style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"/>
    </LinearLayout>


</android.support.v7.widget.CardView>